{% extends 'base.html.twig' %}

{% block body %}

<h1>Inscription sur le site</h1>

{{ form_start(form) }}

{{ form_row(form.username, {'label': 'Nom d\'utilisateur', 'attr': {'placeholder': 'Veuillez entrer votre nom d\'utilisateur'}}) }}
{{ form_row(form.email, {'label': 'Adresse email','attr': {'placeholder': 'Veuillez entrer votre adresse Email'}}) }}
{{ form_row(form.password, {'label': 'Mot de passe','attr': {'placeholder': 'Veuillez entrer votre mot de passe'}}) }}

{{ form_row(form.confirm_password, {'label': 'Mot de passe confirmation','attr': {'placeholder': 'Veuillez entrer votre mot de passe... Again !'}}) }}


<button type="submit" class="btn btn-success">Inscription !</button>

{{ form_end(form) }}
{% endblock %}
